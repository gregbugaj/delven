{
    "compilerOptions": {
      "target": "ES2020",
      "lib": [
        "es2017",
        "esnext"
      ],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "sourceMap": true,
      "pretty": true,
    },
    "include": [
        "src/**/*.ts"
      ],
      "exclude": [
        "node_modules"
      ]
  }
  