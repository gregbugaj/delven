{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "es2017",
      "esnext",
      "esnext.asynciterable"
    ],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "noEmit": true, -- GOOD FOR types.d.ts generation
    "sourceMap": true,
    "pretty": true,

    "outDir": "build",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "*": ["*", "build/*"]
    }
  },
  "include": [
      "src/**/*.ts"
    ],
    
    "exclude": [
      "node_modules", 
      "**/*.spec.ts"
    ]
}
