{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"incremental": true,
		"composite": true,
		"sourceMap": true,
		"declaration": true,
		"stripInternal": true,
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [ "es2017" ],
	}
}

